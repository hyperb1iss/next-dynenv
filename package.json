{
  "name": "next-runtime-env",
  "version": "0.0.0-development",
  "description": "Next.js Runtime Environment Configuration - Populates your environment at runtime rather than build time.",
  "main": "build/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "pnpm lint --fix",
    "test": "jest",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "pnpm test -- --maxWorkers=50% --watchAll",
    "test:integration": "node test-app/integration-test.mjs",
    "build": "tsc -p .",
    "build:watch": "pnpm build --watch",
    "audit-ci": "audit-ci",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "nextjs",
    "runtime",
    "env",
    "runtime env",
    "next-runtime-env"
  ],
  "author": "Expatfile.tax LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/expatfile/next-runtime-env.git"
  },
  "bugs": {
    "url": "https://github.com/expatfile/next-runtime-env/issues"
  },
  "homepage": "https://github.com/expatfile/next-runtime-env#readme",
  "dependencies": {
    "next": "^15",
    "react": "^19"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "audit-ci": "^7.1.0",
    "eslint": "^9.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.5.3",
    "react-dom": "19.2.0",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "next": "^15",
    "react": "^19"
  }
